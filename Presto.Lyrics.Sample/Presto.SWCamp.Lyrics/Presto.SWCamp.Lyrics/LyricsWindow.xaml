<Window
    x:Class="Presto.SWCamp.Lyrics.LyricsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ps="clr-namespace:Presto.SDK;assembly=Presto.SDK"
    Title="플레이어 가사 창"
    Width="600"
    Height="400"
    DataContext="{x:Static ps:PrestoSDK.PrestoService}"
    mc:Ignorable="d" Background="#FFE8DA54">

    <StackPanel VerticalAlignment="Center">
        <TextBlock
            x:Name="title_Singer_info"
            FontSize="14"           
            TextAlignment="Center" />
        <TextBlock
            x:Name="textLyrics"
            FontSize="24"
            Text="가사가 여기에 표시됩니다."
            TextAlignment="Center" />
        <TextBlock 
            x:Name="nextLyr"
            FontSize="18"
            Opacity="0.5"            
            TextAlignment="Center" Height="27" Margin="0,0,0.333,0" Text="다음가사가 여기에 표시됩니다."/>
    </StackPanel>
</Window>
